<div class="container mt-5">
  <h3 class="my-5">ミーティング編集画面</h3>
  
  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">コミュニティ名 :</div>
    <div class="col-md-9"><%= @community.name %></div>
  </div>
  
  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">説明 :</div>
    <div class="col-md-9"><%= @community.explanation %></div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      <%= link_to '編集', edit_admin_community_path(@community), class: "btn btn-success my-2" %>
      <%= link_to '削除', admin_community_path(@community), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
