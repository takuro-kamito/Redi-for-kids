<div class="col-8">
      <% if flash[:notice] %>
      <div class="alert alert-danger">
        <%= flash[:notice] %>
        <% end %>
      </div>
<div class="container">
  <div class='row'>
    <div class= "col-md-3 mt-5">
      <h3>ミーティング作成</h3>
       <%= form_with model: @community, url: admin_communities_path, method: :post do |f| %>
        <%= f.hidden_field :user_id %>
         <div>
          <%= f.label :name, "ミーティング名" %> <br />
           <%= f.text_field :name, size: 30, class: 'form-control' %>
            </div>
             <div>
              <%= f.label :explanation, "内容" %><br />
               <%= f.text_area :explanation, size: "30x5", class: 'form_control' %>
              </div>
              <div>
              <th class="p-1"><%= f.label "ジャンル" %></th><!--ジャンルidを全部呼び出してnameで表示、itemテーブルにgenre_idカラムとして保存,include_blankは空白の時に表示される文章らしいです。-->
            <td></td>
            <td class="p-2"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
            </div>
             <div>
            <%= f.submit "作成する", class: "btn btn-sm btn-success px-5 mb-2 mt-2" %>
          </div>
         <% end %>
        </div>
      <div class="col-md-8 offset-md-1 mt-5">
    <h3>ミーティング一覧</h3>
  <table class= "table mt-3" >
    <tr>
      <th class= "col-4">ミーティング名</th>
        <th class= "col-7">内容</th>
          <th class= "col-1"></th>
            </tr>
              <% @communities.each do |community| %>
             <tr>
            <td class="col-4"><%= link_to community.name, admin_community_path(community) %></td>
           <td class%= "col-7"><%= truncate(community.explanation, length: 100) %></td>
          <td><%= link_to "一覧", admin_community_post_boards_path(community), class: "btn btn-sm btn-outline-dark ml-2" %></td>
         </tr>
       <% end %>
      </table>
     </div>
    </div>
  </div>
  <div class="communities_paginate">
   <%= paginate @communities %>
    </div>
     <head>
      <style>
body {
  background-color: #FFFFF0; /* 背景色の指定 */
  }
.communities_paginate{
  width: 100%;
  margin: auto;
}

.pagination{
  text-align: center;
  display: flex;
  justify-content: center; 
}

.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 100%;
  font-weight: bold;
  padding: 10px;
}

.pagination a:hover{
  width: 50px;
  height: 50px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
  </style>

　
