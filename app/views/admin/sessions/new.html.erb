<div class="container p-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4 text-center">管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td class="pl-5">メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 400px;" %></td>
            </tr>
            <tr>
              <td class="pl-5">パスワード</td>
              <td><%= f.password_field :password, autocomplete: "current-password", style: "width: 400px;" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-primary", style: "width: 150px;" %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>