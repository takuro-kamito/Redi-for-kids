<div class="container mt-5">
  <h3><%= @community.name %>の投稿一覧</h3>
    <table class="table mt-3">
     <tr>
      <th>アイコン</th>
      <th>名前</th>
      <th>投稿</th>
      <th>日時</th>
      <th></th>
       <%= link_to "投稿ページへ", admin_communities_path(@user), class: "btn btn-primary" %>
        </tr>
        <% @post_boards.each do |post_board| %>
         <tr>
           <td><%= image_tag post_board.user.get_profile_image(60, 60), class: "rounded-circle mx-auto d-block" %></td>
          <td><%= link_to post_board.user.name, admin_user_path(post_board.user.id) %></td>
           <td><%= post_board.body %></td>
            <td><%= post_board.created_at.strftime("%Y年%m月%M日 %H時%M分") %></td>
             <td>
              <%= link_to '削除', admin_community_post_board_path(post_board.community_id, post_board) %>
               </td>
                </tr>
                <% end %>
               </table>
              <div class="post_board_paginate">
             <%= paginate @post_boards %>
            </div>
          </div>
         <head>
       <style>
       
  body {
    background-color: #FFFFF0; /* 背景色の指定 */
  }

.post_board_paginate{
  width: 100%;
  margin: auto;
}

/* ページネーション全体 */
.pagination{
  text-align: center;
  display: flex;
  justify-content: center;
}

/* ページネーションのspan */
.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

/* ページネーションのリンク文字（a） */
.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 100%;
  font-weight: bold;
  padding: 10px;
}

/* ページネーションの文字にカーソルを載せた時 */
.pagination a:hover{
  width: 50px;
  height: 50px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}

/* 現在のページの数字についての表記 */
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
  </style>