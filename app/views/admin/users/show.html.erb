<div class="container p-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4 text-center"><%= @user.name %>さんの会員詳細</h5>
        <div class="d-flex align-items-center pb-3">
        <table class="mt-4">
          <tr>
            <th class="p-2">会員ID</th>
            <td class="pr-5"></td>
            <td class="p-2"><%= @user.id %></td>
          </tr>
          <tr>
            <th class="p-2">氏名</th>
            <td></td>
            <td class="p-2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="p-2">フリガナ</th>
            <td></td>
            <td class="p-2"><%= @user.name_kana %></td>
          </tr>
          <tr>
            <th class="p-2">メールアドレス</th>
            <td></td>
            <td class="p-2"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="p-2">会員ステータス</th>
            <td></td>
              <% if @user.is_active == true %>
                <th class="text-success p-2">有効</th>
              <% else %>
                <th class="text-secondary p-2">退会済</th>
              <% end %>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td class="pt-4">
              <span class="pr-5"><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %></span>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
