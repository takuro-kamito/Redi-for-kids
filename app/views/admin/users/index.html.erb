<div class="container p-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4 text-center">会員一覧</h2>
        <table class="table table-bordered">
         <thead style="background-color: #e9ecef;">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="align-middle"><%= user.id %></td>
            <td class="align-middle"><%=link_to user.name, admin_user_path(user.id) %></td>
            <td class="align-middle"><%= user.email %></td>
            <td class="<%= user.status == '有効' ? 'text-warning' : 'text-success' %>"><%= user.status %></td>
            </tr>
              <% end %>
              </tbody>
             </table>
           <div class="d-flex justify-content-center">
          </div>
        </div>
       </div>
      </div>
     <div class="users_paginate">
   <%= paginate @users %>
  </div>
 <head>
<style>
  body {
  background-color: #FFFFF0; /* 背景色の指定 */
  }
.users_paginate{
  width: 100%;
  margin: auto;
}

/* ページネーション全体 */
.pagination{
  text-align: center;
  display: flex;
  justify-content: center; 
}

/* ページネーションのspan */
.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

/* ページネーションのリンク文字（a） */
.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 100%;
  font-weight: bold;
  padding: 10px;
}

/* ページネーションの文字にカーソルを載せた時 */
.pagination a:hover{
  width: 50px;
  height: 50px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}

/* 現在のページの数字についての表記 */
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
  </style>
