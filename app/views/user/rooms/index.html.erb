<h2>MY Room</h2>
 <div><%= link_to "User pageへ", users_path(@crrent_entries), class: "btn btn-primary btn-cute"  %></div>
  <div class="card-container">
  <% @another_entries.each do |entry| %>
    <%= link_to room_path(entry.room) do %>
      <div class="square-card">
        <div class="card-header">
          <div class="avatar-container">
            <%= image_tag entry.user.get_profile_image(60, 60), class: "card-avatar rounded-circle" %>
          </div>
          <span class="card-username"><%= entry.user.name %></span>
        </div>
        <div class="card-body">
          <div class="card-message-container">
            <div class="card-message"><%= Message.find_by(id: entry.room.message_ids.last)&.body %></div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="current_paginate">
  <%= paginate @current_entries %>
  </div>
</div>
<style>
  .card-header {
  background-color:#FFEAC7; /* その他のスタイルプロパティ */

  }
.current_paginate{
  width: 100%;
  margin: auto;
}

.pagination{
  text-align: center;
  display: flex;
  justify-content: center;
}

.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 115%;
  font-weight: bold;
  padding: 10px;
}

.pagination a:hover{
  width: 60px;
  height: 60px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
</style>