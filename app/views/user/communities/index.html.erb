<div class="container">
  <div class='row mt-5'>
    <h3>コミュニティ一覧</h3>
  </div>
</div>

<div class="container">
  <div class='row mt-3'>
    <% @communities.each do |community| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= community.name %></h5>
            <p class="card-text"><%= community.explanation %></p>
            <%= link_to "掲示板へ", user_community_post_boards_path(community), class: "btn btn-primary" %>
            <%= render 'user/favorites/favorite', community: community %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="communities_paginate">
<%= paginate @communities %>
<head>
  <style>
.communities_paginate{
  width: 100%;
  margin: auto;
}

/* ページネーション全体 */
.pagination{
  text-align: center;
  display: flex;
  justify-content: center; 
}

/* ページネーションのspan */
.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

/* ページネーションのリンク文字（a） */
.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 100%;
  font-weight: bold;
  padding: 10px;
}

/* ページネーションの文字にカーソルを載せた時 */
.pagination a:hover{
  width: 50px;
  height: 50px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}

/* 現在のページの数字についての表記 */
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
  </style>
</head>