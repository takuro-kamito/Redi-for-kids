<% notifications.each do |notification| %>
  <% if notification.action == 'dm' %>
    <div class="notification-card">
      <%= image_tag notification.visitor.get_profile_image(60, 60), class: "card-avatar rounded-circle" %>
      <%= link_to room_path(notification.room_id) do %>
        <%= notification.visitor.name %>
      <% end %>
      <h4><i class="fas fa-envelope"></i>DMを送りました</h4>
      <p>投稿時期： <%= time_ago_in_words(notification.created_at).upcase %>前</p>
    </div>
  <% end %>
<% end %>
<div class="users_paginate">
    <%= paginate @notifications %>
    </div>

<style>
.users_paginate{
  width: 100%;
  margin: auto;
}

/* ページネーション全体 */
.pagination{
  text-align: center;
  display: flex;
  justify-content: center;
  padding: 60px;
}

/* ページネーションのspan */
.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

/* ページネーションのリンク文字（a） */
.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 100%;
  font-weight: bold;
  padding: 10px;
}

/* ページネーションの文字にカーソルを載せた時 */
.pagination a:hover{
  width: 50px;
  height: 50px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}

/* 現在のページの数字についての表記 */
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
 .notification-card {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
  text-align: center; /* カード内のテキストを中央に寄せる */
}

.card-link {
  text-decoration: none;
  color: #333;
  font-weight: bold;
  display: inline-block; /* カード内のテキストを中央に寄せるために必要 */
}

.notification-title {
  font-size: 25px;
  font-weight: bold;
  margin-bottom: 5px;
  text-align: center; /* タイトルを中央に寄せる */
}
</style>
