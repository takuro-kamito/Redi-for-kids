<div class="bg_pattern Rectangles"></div>
<div class="container p-4">
  <div class="row">
    <div class="col-4">
      <div class="d-flex flex-column align-items-start">
        <div style="text-align: left">
          <%= image_tag "panda2.png", size: '450x600', class: 'pomuo' %>
          <div class="balloon3-left ml-4">
                   <p>        <br>
                   会員の方は <br>
                   こちらからだよ <br>
                   クリック<br>
                   
            <%= render "user/shared/links" %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-8">
<% if flash[:notice] %>
  <div class="alert alert-danger">
    <%= flash[:notice] %>
  </div>
<% end %>
      <h2 class="md-4 text-center">新規会員登録</h2>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "user/shared/error_messages", resource: resource %>
      <table>
        <tbody>
          <tr>
            <td class="p-1">名前</td>
            <td class="p-1"><%= f.label :name, "(名前)" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
          <td class="p-1">フリガナ</td>
          <td class="p-1"><%= f.label :name_kana, "(フリガナ)" %></td>
          <td><%= f.text_field :name_kana %></td>
          </tr>
          <tr>
            <td class="p-1">メールアドレス</td>
            <td></td>
            <td class="p-1"><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td class="p-1">パスワード(６文字以上)</td>
            <td></td>
            <td class="p-1"><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <td class="p-1">パスワード(確認用)</td>
          <td></td>
          <td class="p-1"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <tr>
            <td></td>
            <td></td>
            <td class="p-4"><%= f.submit "サインアップ", class:"btn btn-success", style: "width: 150px;" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      </div>
    </div>
 </div>
<style>
.md-4 {
  
    font-family: 'Nunito Sans', sans-serif;
    font-size: 30px; /* 見出しの文字サイズを大きく設定 */
    color: #AA6822; /* テキストカラーを目立つ赤に設定 */
}
.p-1 {
    font-family: 'Nunito Sans', sans-serif;
    font-size: 20px; /* 見出しの文字サイズを大きく設定 */
    color: #AA6822; /* テキストカラーを目立つ赤に設定 */
  }
  p {
    font-family: 'Nunito Sans', sans-serif; /* 手書き風の可愛らしいフォントに設定 */
    font-size: 16px; /* 本文の文字サイズを調整 */
    font-weight: bold; 
    color: #AA6822; /* テキストカラーを濃いグレーに設定 */
    background-color: transparent(0, 0, 0, 0.4);
  }
.balloon3-left {
  left: -160px;
  position: absolute;
  display: inline-block;
  margin: 1.5em 0 1.5em 5px;
  padding: 0 80px;
  width: 275px;
  height: 180px;
  line-height: 120px
  text-align: center;
  color: #FFF;
  font-size: 16px;
  font-weight: bold;
  background: #ffcc75;
  border-radius: 50%;
  box-sizing: border-box;
}

.balloon3-left:before {
  content: "";
  position: absolute;
  top: 50%;
  right: -26px;
  margin-top: -20px;
  border: 15px solid transparent;
  border-left: 15px solid #ffcc75;
  z-index: 0;
}
.bg_pattern {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: #ffe9a7;
  opacity: 0.4;
  z-index: -1;
}
.Rectangles {
  background-image:  repeating-linear-gradient(45deg, #ffc107 25%, transparent 25%, transparent 75%, #ffc107 75%, #ffc107), repeating-linear-gradient(45deg, #ffc107 25%, #ffe9a7 25%, #ffe9a7 75%, #ffc107 75%, #ffc107);
  background-position: 0 0, 20px 20px;
  background-size: 40px 40px;
}

html, body {
  margin: 0;
  padding: 0;
}
body {
  font-family: YuGothic, "游ゴシック体", "Yu Gothic", "ヒラギノ角ゴ Pro", "Hiragino Kaku Gothic Pro", "メイリオ", Meiryo, "ＭＳ Ｐゴシック", "MS PGothic", sans-serif;
  letter-spacing: .025em;
  line-height: 1.8;
}
* {
  box-sizing: border-box;
}
.section {
  max-width: 1024x;
  margin: 0 auto;
  padding: 100px 20px 1000px;
}
._a {
  max-width: 300px;
  margin: 0 auto;  
}
._a a {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 2.0em 1.0em;
  border: 1px solid #222222;
  background: linear-gradient(to right, #ffffff 50%, #222222 50%);
  background-size: 200% auto;
  color: #222222;
  font-size: 12px;
  text-decoration: none;
  text-align: center;
  transition: .3s;
  position: relative;
}
._a a:after {
  content: "";
  position: absolute;
  right: -5px;
  bottom: -5px;
  width: 100%;
  height: 100%;
  border-right: 1px solid #222222;
  border-bottom: 1px solid #222222;
}
._a a:hover {
  color: #ffffff;
  background-position: -100% 0;
}
</style>

