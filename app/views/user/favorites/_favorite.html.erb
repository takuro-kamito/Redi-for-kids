<% if community.favorited_by?(current_user) %>
  <%= link_to user_community_favorites_path(community), method: :delete, remote: true, id: "user_favorites_favorite_#{community.id}" do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= community.favorites.count %>
  <% end %>
<% else %>
  <%= link_to user_community_favorites_path(community), method: :post, remote: true, id: "user_favorites_favorite_#{community.id}" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= community.favorites.count %>
  <% end %>
<% end %>