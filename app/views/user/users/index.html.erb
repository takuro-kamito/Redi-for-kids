<div class="text-center">
  <h2>Member</h2>
  <div class="mx-auto" style="width: 80%">
  <table class="table">
    <thead>
      <tr>
        <th>icon</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100), class: "rounded-circle mx-auto d-block" %></td>
          <td><%= user.name %></td>
          <td>
            <%= link_to "Member Info", user_user_path(user.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
<div class="users_paginate">
<%= paginate @users %>
</div>
<head>
  <style>
.users_paginate{
  width: 100%;
  margin: auto;
}

/* ページネーション全体 */
.pagination{
  text-align: center;
  display: flex;
  justify-content: center; 
}

/* ページネーションのspan */
.pagination span{
  text-align: center;
  width: 50px;
  font-size: 20px;
}

/* ページネーションのリンク文字（a） */
.pagination a{
  color: #818181;
  display: block;
  width: 100%;
  height: 100%;
  font-weight: bold;
  padding: 10px;
}

/* ページネーションの文字にカーソルを載せた時 */
.pagination a:hover{
  width: 50px;
  height: 50px;
  background-color: #84b8eb;
  color: #FFF;
  border-radius: 100%;
  padding: 10px;
}

/* 現在のページの数字についての表記 */
.current{
  font-weight: bold;
  color: #84b8eb;
  padding: 10px;
}
  </style>
</head>