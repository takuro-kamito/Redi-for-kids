<div class="container" px-5>
  <div class="row">
    <div="col-md-3">
      <h2 User info></h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
          <td><%= link_to edit_user_user_path(@user), class: "btn btn-outline-secondary btn-block" do %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div>
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "Show", user_user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
