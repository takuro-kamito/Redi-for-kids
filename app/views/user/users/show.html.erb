<div class="container" px-5>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        編集する
      <% end %>

      <% unless @user.id == current_user.id %>
        <% if @is_room == true %>
          <%= link_to "メッセージ", user_room_path(@room_id) %>
        <% else %>
          <% @room ||= Room.new %>
          <%= form_for @room, url: user_rooms_path do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, value: @user.id %>
            <% end %>
            <%= f.button "メッセージを送る", type: "submit" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>