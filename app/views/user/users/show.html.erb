<div class="bg_pattern Rectangles"></div>
 <div class="container p-1">
  <div class="row">
    <div class="col-3">
      <div class="d-flex flex-column align-items-start">
        <div style="text-align: left">
          <%= image_tag "panda2.png", size: '450x500', class: 'pomuo' %>
          <div class="balloon3-left ml-4">
            <p><br>
              メンバーに<br>
              直接メールも<br>
              出来るよー😄<br>
              どんどん<br>
              交流してね👍<br>
            </p>
          </div>
        </div>
      </div>
    </div>
   <div class="col-md-8 ml-auto">
  <h2 class="text-center text-uppercase font-weight-bold">My page</h2>
  <div class="text-center">
  <%= image_tag @user.get_profile_image(200, 200), class: "rounded-circle mx-auto d-block" %>
   <div class="d-flex justify-content-center align-items-start">
    <div>
     <i class="fa fa-user mr-2" style="font-size: 12px;"></i>
      </div>
        <div>
         <h4 class="text-uppercase">ネーム</h4>
          <div><%= @user.name %></div>
           </div>
             </div>
               <% if @user.id == current_user.id %>
                <% if @user.email.present? %>
                 <div class="d-flex justify-content-center align-items-start mb-2">
                   <div>
                    <i class="fa fa-envelope mr-2" style="font-size: 12px;"></i>
                     </div>
                       <div>
                        <h4 class="text-uppercase">メールアドレス</h4>
                         <div><%= @user.email %></div>
                           </div>
                            </div>
                             <% end %>
                              <% end %>
                             </div>
                            <hr>
                          <% if @user.id == current_user.id %>
                         <% if @user.email.present? %>
                        <div class="text-right">
                      <%= link_to edit_user_path(@user) do %>
                     <i class="fa fa-pencil-alt" style="font-size: 16px;"></i>
                   <% end %>
                  <% end %>
                 <% end %>
                <% if @user.id == current_user.id %>
               <% if @user.email.present? %>
              <%= link_to favorites_community_path(@user), class: 'icon-link' do %>
              <i class="fas fa-heart icon" style="border-radius: 50%; background-color: pink; padding: 10px;"></i>
             <span class="tooltip">お気に入り</span>
             <% end %>
           <% end %>
          <% end %>
         <% unless @user.id == current_user.id %>
        <% if @is_room == true %>
        <div class="text-right">
       <%= link_to room_path(@room_id) do %>
      <i class="fa fa-envelope"></i> Room
       <% end %>
       　</div>
        <% else %>
          <% @room ||= Room.new %>
           <%= form_for @room, url: rooms_path do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, value: @user.id %>
               <% end %>
               <%= f.button "Mail", type: "submit", class: "right-align" %>
              <% end %>
             <% end %>
            <% end %>
          <h4 class="text-center text-uppercase">introduction</h4>
 　　　　　　　 <p class="text-center"><%= @user.introduction %></p>
        </div>
      </div>
    </div>
  </div>
