<div class="container p-4">
  <div class="row p-4">
    <div class="col-md-3">
      <div class="row-mt-2">
        <%= render 'public/searches/genre_search' %>
      </div>
    </div>
    <div class="col-md-8">
      <h2 class="mb-4 text-center">Community search for "<%= @word %>"</h2>
      <div class="row">
        <% @communities.each do |community| %>
          <div class="col-4">
           <b><%= community.name %></b>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>