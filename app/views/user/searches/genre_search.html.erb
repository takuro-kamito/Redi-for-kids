<div class="container p-4">
  <div class="row p-4">
    <div class="col-md-3">
      <div class="row-mt-2">
        <%= render 'user/searches/genre_search' %>
         </div>
          </div>
            <h2>検索結果</h2>
             <div class="col-md-8">
               <h2 class="mb-4 text-center"><%= @genre.name %></h2>
