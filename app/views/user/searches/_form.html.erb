<div class="search_form">
  <%= form_with url: user_search_path, method: :get, class: "d-flex" do |f| %>
    <%= f.text_field :word, class: "form-control" %>
    <%= f.select :model, options_for_select({"User" => "User", "Community" => "Community"}) %>
    <%= f.hidden_field :search_form, value: "partial_match" %>
    <%= f.button :submit do %>
      <i class="fa solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>